{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "esnext",
        "experimentalDecorators": true,
        "newLine": "LF",
        "jsx": "react",
        "diagnostics": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": false,
        "noEmit": true
    },

    "exclude": [
        "assets",
        "node_modules",
        "config",
        "public",
        "**/*.json",
        "**/*.jsx"
    ]
}